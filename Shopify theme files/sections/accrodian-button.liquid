{{ 't4s-accordion.css' | asset_url | stylesheet_tag }}
{%- liquid
    assign sid = section.id
    assign se_stts = section.settings
    assign se_blocks = section.blocks
    assign stt_layout = se_stts.layout
    assign stt_image_bg = se_stts.image_bg
    if se_stts.layout == 't4s-cus-width'
        assign html_layout = '<div class="t4s-container" style="--width:010693px">__</div>' | split: '__'
    elsif stt_layout == 't4s-se-container' 
        assign html_layout = '<div class="t4s-container">__</div></div>' | split: '__'
    elsif stt_layout == 't4s-container-wrap'
        assign html_layout = '<div class="t4s-container">__</div>' | split: '__'
    else
        assign html_layout = '__' | split: '__'
    endif
    assign forloop_first = true
 -%}
<div class="t4s-section-inner t4s_nt_se_{{ sid }} {{ stt_layout }} {% if stt_image_bg != blank and stt_layout != 't4s-se-container' %} t4s-has-imgbg lazyloadt4s {% endif %}" {% if stt_image_bg != blank and stt_layout != 't4s-se-container' %} data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto" data-optimumx="2" {% endif %} {% render 'section_style', se_stts: se_stts %}>
    {{- html_layout[0] | replace: '010693', se_stts.custom_width -}}
    {%- if stt_layout == 't4s-se-container' -%}<div class="t4s-container-inner {% if stt_image_bg != blank %} t4s-has-imgbg lazyloadt4s {% endif %}" {%- if stt_image_bg != blank -%} data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto" data-optimumx="2" {%- endif -%} > {%- endif -%}
    <div class="t4s-accordion-style-{{ se_stts.accor_des }}">
        {%- render 'section_tophead', se_stts: se_stts -%}
        <div class="t4s-heading-buttons" style="--button-bg: {{ se_stts.button_bg }}; --button-text-cl: {{ se_stts.button_text_cl }}; --button-active-bg: {{ se_stts.button_active_bg }}; --button-active-text-cl: {{ se_stts.button_active_text_cl }};">
            {%- for block in se_blocks -%}
                {%- if block.type != 'button_group' -%}{% continue %}{%- endif -%}
                {%- assign bk_stts = block.settings -%}
                {%- assign blockid = block.id -%}
                {%- if bk_stts.title == blank -%}{% continue %}{%- endif -%}
                <div class="t4s-button-group-wrapper">
                    <button class="t4s-accor-button {% if forloop_first and se_stts.auto_active %} t4s-active {% endif %}" data-t4s-tab-button data-target="t4s-group-{{ blockid }}" {{ block.shopify_attributes }}>
                        {{ bk_stts.title }} (ID: {{ blockid }})
                    </button>
                    <div class="t4s-tab-content-group {% if forloop_first and se_stts.auto_active %} t4s-active {% else %} t4s-hidden {% endif %}" id="t4s-group-{{ blockid }}" data-t4s-tab-content style="--title-cl: {{ se_stts.title_cl }};--bg-title-cl: {{ se_stts.bg_title_cl }};--title-active-cl: {{ se_stts.title_active_cl }};--bg-title-active-cl: {{ se_stts.bg_title_active_cl }};--content-cl: {{ se_stts.content_cl }};--bg-content-cl: {{ se_stts.bg_content_cl }};">
                        {%- for accordion_block in se_blocks -%}
                            {%- if accordion_block.type != 'accordion_item' or accordion_block.settings.button_id != blockid -%}{% continue %}{%- endif -%}
                            <!-- Debug: Accordion for button_id={{ accordion_block.settings.button_id }}, blockid={{ blockid }} -->
                            {%- assign acc_stts = accordion_block.settings -%}
                            {%- if acc_stts.title == blank or acc_stts.content == blank -%}{%- continue %}{%- endif -%}
                           <div class="t4s-tab-wrapper" data-t4s-tab-wrapper {{ accordion_block.shopify_attributes }} timeline hdt-reveal="slide-in">
    <a id="b_{{ blockid }}_{{ accordion_block.id }}" class="t4s-accor-title" href="#t4s-{{ blockid }}_{{ accordion_block.id }}" rel="nofollow" data-t4s-tab-item data-no-instant>
        <span class="t4s-accor-text">
            <span class="t4s-accor-icon">{%- render 'icon_accordion', icon: acc_stts.icon -%} </span>
            {{ acc_stts.title }}
        </span>
        <span class="t4s-accor-item-nav">+</span> <!-- Default to '+' -->
    </a>
    <div id="t4s-{{ blockid }}_{{ accordion_block.id }}" class="t4s-tab-content t4s-rte" data-t4s-tab-content {% if se_stts.auto_active == false %} style="display: none;"{%- endif -%}>{{ acc_stts.content }}</div>
</div>
                        {%- endfor -%}
                    </div>
                </div>
                {%- assign forloop_first = false -%}
            {%- endfor -%}
        </div>
    </div>
    {{- html_layout[1] -}}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll('.t4s-accor-button');
    const contentGroups = document.querySelectorAll('.t4s-tab-content-group');
    const accordionTitles = document.querySelectorAll('.t4s-accor-title');

    buttons.forEach(button => {
        button.addEventListener('click', function() {
            const targetId = this.getAttribute('data-target');
            const targetGroup = document.getElementById(targetId);

            // Toggle active state for buttons
            buttons.forEach(btn => btn.classList.remove('t4s-active'));
            this.classList.add('t4s-active');

            // Show only the clicked button's content group
            contentGroups.forEach(group => {
                if (group === targetGroup) {
                    group.classList.add('t4s-active');
                    group.classList.remove('t4s-hidden');
                } else {
                    group.classList.remove('t4s-active');
                    group.classList.add('t4s-hidden');
                }
            });
        });
    });

    accordionTitles.forEach(title => {
        title.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href').substring(1);
            const targetContent = document.getElementById(targetId);
            const wrapper = this.parentElement;
            const navIcon = this.querySelector('.t4s-accor-item-nav');

            // Toggle active class and content display
            const isActive = wrapper.classList.contains('t4s-active');
            wrapper.classList.toggle('t4s-active');

            // Toggle content visibility
            targetContent.style.display = isActive ? 'none' : 'block';

            // Toggle icon between '+' and '−'
            navIcon.textContent = isActive ? '+' : '−';
        });
    });
});
</script>

