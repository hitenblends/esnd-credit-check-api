{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: {{ block.settings.arrow_gap }}px;
    {% comment %} padding: {{ block.settings.padding }}px; {% endcomment %}
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    {% comment %} margin: {{ block.settings.margin }}px 0; {% endcomment %}
    margin:-34px auto 0px auto !important;
    padding-bottom:40px !important;
    padding-top:12px !important;
   
  }

  .ai-product-nav-arrow-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: {{ block.settings.arrow_color }};
    padding: {{ block.settings.arrow_padding }}px;
    border-radius: {{ block.settings.arrow_border_radius }}px;
    background-color: {{ block.settings.arrow_background }};
    border: 1px solid {{ block.settings.arrow_border_color }};
    transition: all 0.3s ease;width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    cursor: pointer;
  }

  .ai-product-nav-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
    color: {{ block.settings.arrow_hover_color }};
    border-color: {{ block.settings.arrow_hover_border }};
    transform: translateY(-2px);
  }

  .ai-product-nav-arrow-{{ ai_gen_id }}.disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }

  .ai-product-nav-arrow-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-navigation-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
      gap: {{ block.settings.arrow_gap | times: 0.7 }}px;
    }

    .ai-product-nav-arrow-{{ ai_gen_id }} {
      width: {{ block.settings.arrow_size | times: 0.8 }}px;
      height: {{ block.settings.arrow_size | times: 0.8 }}px;
      padding: {{ block.settings.arrow_padding | times: 0.8 }}px;
    }

    .ai-product-nav-arrow-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

