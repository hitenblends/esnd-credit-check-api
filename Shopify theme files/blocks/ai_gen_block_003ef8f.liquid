{% doc %}
  @prompt
    create a braedcrumbs section if i from collection page taht time show home then collection name and then products, not working if i am coming from collection page

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumbs-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-breadcrumbs-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-breadcrumbs-list-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: {{ block.settings.item_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: {{ block.settings.font_size }}px;
  }

  .ai-breadcrumbs-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  .ai-breadcrumbs-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
    font-weight: {{ block.settings.current_font_weight }};
  }

  .ai-breadcrumbs-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
    user-select: none;
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumbs-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-breadcrumbs-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-breadcrumbs-list-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<nav 
  class="ai-breadcrumbs-{{ ai_gen_id }}"
  aria-label="Breadcrumb navigation"
  {{ block.shopify_attributes }}
>
  <div class="ai-breadcrumbs-container-{{ ai_gen_id }}">
    <ol class="ai-breadcrumbs-list-{{ ai_gen_id }}"><li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <a href="{{ routes.root_url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
          {{ block.settings.home_text }}
        </a>
      </li>

      {% liquid
        assign current_collection = collection
        if product and collections[product.collections.first.handle]
          assign current_collection = collections[product.collections.first.handle]
        endif
      %}

      {% if current_collection %}
        <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
            {{ block.settings.separator }}
          </span>
          {% if product %}
            <a href="{{ current_collection.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
              {{ current_collection.title }}
            </a>
          {% else %}
            <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
              {{ current_collection.title }}
            </span>
          {% endif %}
        </li>
      {% endif %}

      {% if product %}
        <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
            {{ block.settings.separator }}
          </span>
          <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
            {{ product.title }}
          </span>
        </li>
      {% endif %}

      {% unless product or current_collection %}
        {% if template contains 'search' %}
          <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
              {{ block.settings.separator }}
            </span>
            <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
              Search
            </span>
          </li>
        {% elsif page and page.handle != 'frontpage' %}
          <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
              {{ block.settings.separator }}
            </span>
            <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
              {{ page.title }}
            </span>
          </li>
        {% elsif blog %}
          <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
            <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
              {{ block.settings.separator }}
            </span>
            {% if article %}
              <a href="{{ blog.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">
                {{ blog.title }}
              </a>
            {% else %}
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
                {{ blog.title }}
              </span>
            {% endif %}
          </li>
          {% if article %}
            <li class="ai-breadcrumbs-item-{{ ai_gen_id }}">
              <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">
                {{ block.settings.separator }}
              </span>
              <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">
                {{ article.title }}
              </span>
            </li>
          {% endif %}
        {% endif %}
      {% endunless %}
    </ol>
  </div>
</nav>

