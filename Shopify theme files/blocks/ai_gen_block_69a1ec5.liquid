<script>
  (function() {
    class BreadcrumbNavigation{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        if (window.location.pathname.includes('/products/')) {
          this.handleProductBreadcrumb();
        }
      }

      handleProductBreadcrumb() {
        const collectionItem = this.querySelector('.ai-breadcrumbs-collection-item-{{ ai_gen_id }}');
        const collectionSeparator = this.querySelector('.ai-breadcrumbs-collection-separator-{{ ai_gen_id }}');
        const collectionLink = this.querySelector('.ai-breadcrumbs-collection-link-{{ ai_gen_id }}');
        
        if (!collectionItem || !collectionSeparator || !collectionLink) return;

        const referrer = document.referrer;
        const currentDomain = window.location.origin;
        
        if (referrer && referrer.startsWith(currentDomain)) {
          const referrerPath = new URL(referrer).pathname;
          
          if (referrerPath.includes('/collections/')) {
            const pathParts = referrerPath.split('/collections/')[1];
            if (pathParts) {
              const collectionHandle = pathParts.split('/')[0];
              
              if (collectionHandle && collectionHandle !== '') {
                collectionLink.href = `/collections/${collectionHandle}`;
                collectionLink.textContent = this.formatCollectionName(collectionHandle);
                collectionItem.style.display = 'flex';
                collectionSeparator.style.display = 'inline';
              }
            }
          } else if (referrerPath === '/' || referrerPath === '') {
            collectionItem.style.display = 'none';
            collectionSeparator.style.display = 'none';
          }
        } else {
          collectionItem.style.display = 'none';
          collectionSeparator.style.display = 'none';
        }
      }

      formatCollectionName(handle) {
        return handle
          .split('-')
          .map(word => word.charAt(0).toUpperCase() + word.slice(1))
          .join(' ');
      }
    }

    customElements.define('breadcrumb-navigation-{{ ai_gen_id }}', BreadcrumbNavigation{{ ai_gen_id }});
  })();
</script>

